                    android:id="@+id/product_size_small"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/size_small_btn"
                    app:layout_constraintEnd_toEndOf="@+id/size_small_btn"
                    app:layout_constraintStart_toStartOf="@+id/size_small_btn"
                    app:layout_constraintTop_toTopOf="@+id/size_small_btn"
                    app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

                <ImageView
                    android:id="@+id/product_size_medium"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/size_medium_btn"
                    app:layout_constraintEnd_toEndOf="@+id/size_medium_btn"
                    app:layout_constraintStart_toStartOf="@+id/size_medium_btn"
                    app:layout_constraintTop_toTopOf="@+id/size_medium_btn"
                    app:srcCompat="@drawable/ic_panorama_fish_eye_black_24dp" />

                <ImageView
                    android:id="@+id/product_size_large"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:visibility="invisible"
